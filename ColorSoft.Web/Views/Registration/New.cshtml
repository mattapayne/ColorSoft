@using ColorSoft.Web.Extensions
@model ColorSoft.Web.Models.Registration.RegistrationViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.SelectedNavigationItem = "register";
}
@{
    Html.EnableClientValidation(false);
    Html.EnableUnobtrusiveJavaScript(false);
}
@using (Html.BeginForm(MVC.Registration.New(), FormMethod.Post))
{
    @Html.BootstrapValidationSummary("There were some errors ...")

    <h2>
        Register</h2>
    <div class="row">
        <div class="span12">
            <h3>
                Organization Information</h3>
        </div>
    </div>
    <div class="row">
        <div class="span12">
            <div class="control-group">
                @Html.LabelFor(m => m.OrganizationName, new {@class = "control-label"})
                <div class="controls">
                    @Html.TextBoxFor(m => m.OrganizationName)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="span12">
            <h3>
                Your Information</h3>
        </div>
    </div>
    <div class="row">
        <div class="span3">
            <div class="control-group">
                @Html.LabelFor(m => m.FirstName, new {@class = "control-label"})
                <div class="controls">
                    @Html.TextBoxFor(m => m.FirstName, new { autocomplete = "off" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => m.LastName, new {@class = "control-label"})
                <div class="controls">
                    @Html.TextBoxFor(m => m.LastName, new { autocomplete = "off" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => m.UserName, new {@class = "control-label"})
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName, new { autocomplete = "off" })
                </div>
            </div>
        </div>
        <div class="span3">
            <div class="control-group">
                @Html.LabelFor(m => m.EmailAddress, new {@class = "control-label"})
                <div class="controls">
                    @Html.TextBoxFor(m => m.EmailAddress, new { autocomplete = "off" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => m.Password, new {@class = "control-label"})
                <div class="controls">
                    @Html.PasswordFor(m => m.Password, new { autocomplete = "off" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => m.PasswordConfirmation, new {@class = "control-label"})
                <div class="controls">
                    @Html.PasswordFor(m => m.PasswordConfirmation, new { autocomplete = "off" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="control-group span10">
            <div class="controls">
                <button id="add" class="btn btn-primary">
                    Add</button>
            </div>
        </div>
    </div>
}